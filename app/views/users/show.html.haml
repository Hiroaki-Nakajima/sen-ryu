.in-container.col-12
  = render "shared/side"

  .main.col-10
    %p いいねランク第１位
    .info
      .left-info
        - if @user_ranks[0]
          .main-box#best
            .main-box#best__content
              = simple_format(@user_ranks[0].content)
              -if @user_ranks[0].image.file.nil?
                = image_tag "senryu.com.png", size: "180x180", alt: "イメージ画像", class: "default-logo"
              -else
                = image_tag "#{@user_ranks[0].image}", size: "220x220", alt: "イメージ画像", class: "image"
            .main-box__bar
              = image_tag "#{@user_ranks[0].user.image}", size: "40x40", alt: "アイコン画像", class: "icon"
              = "いいね: #{@user_ranks[0].liked_users.count}"
              = link_to "詳細", "/posts/#{@user_ranks[0].id}"
            .main-box__user
        - else
          %p いいねされた投稿がありません
      .right-info
        .right-info__image 
          = image_tag "#{@user.image}", size: "200x200", alt: "アイコン画像", class: "icon"
        .right-info__name
          = @user.name
          .follow
            = render partial: "relationships/follow_button", locals: {user: @user}
    %hr    
    %p いいねランク上位
    .content
      .content__best
        - @user_ranks.each do |post|
          .main-box
            .main-box__content
              = simple_format(post.content)
              -if post.image.file.nil?
                = image_tag "senryu.com.png", size: "100x100", alt: "イメージ画像", class: "default-logo"
              -else
                = image_tag "#{post.image}", size: "120x120", alt: "イメージ画像", class: "image"
            .main-box__bar
              = image_tag "#{post.user.image}", size: "30x30", alt: "アイコン画像", class: "icon"
              = "いいね: #{post.liked_users.count}"
              = link_to "詳細", "/posts/#{post.id}"

      %hr
      %p 最新投稿
      .content__new
        - @user_posts.each do |post|
          .main-box
            .main-box__content
              = simple_format(post.content)
              -if post.image.file.nil?
                = image_tag "senryu.com.png", size: "100x100", alt: "イメージ画像", class: "default-logo"
              -else
                = image_tag "#{post.image}", size: "120x100", alt: "イメージ画像", class: "image"
            .main-box__bar
              = image_tag "#{post.user.image}", size: "30x30", alt: "アイコン画像", class: "icon"
              = "いいね: #{post.liked_users.count}"
              = link_to "詳細", "/posts/#{post.id}"
          
      


        
